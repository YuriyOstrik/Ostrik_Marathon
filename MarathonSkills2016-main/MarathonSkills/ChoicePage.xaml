<Page x:Class="MarathonSkills.ChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoicePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="154.333"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="81"/>
            <RowDefinition Height="71"/>
            <RowDefinition Height="64.667"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="27"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Margin="0,14,0,10" StrokeThickness="0" Grid.ColumnSpan="3" Grid.RowSpan="8">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/fon.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle StrokeThickness="0" Height="153" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/i.jpg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Margin="8,34,5,0" TextWrapping="Wrap" Text="MARATHON SKILLS 2025" Foreground="White" FontSize="26" HorizontalAlignment="Center" Width="317" Height="37" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Open Sans Semibold" Grid.Column="1" FontWeight="Bold"/>
        <TextBlock Margin="81,82,76,0" TextWrapping="Wrap" Text="Чита, Россия" Foreground="#FFCCCCCC" FontSize="20" HorizontalAlignment="Center" Width="173" Height="32" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Open Sans Light" Grid.Column="1" FontWeight="Bold"/>
        <TextBlock Margin="55,106,49,0" TextWrapping="Wrap" Text="среда 1 июня 2025" Foreground="#FFCCCCCC" FontSize="20" HorizontalAlignment="Center" Width="226" Height="32" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Open Sans Light" Grid.Column="1" FontWeight="Bold"/>
        <Button Name="btn_runner" Content="Я хочу стать бегуном" Margin="40,15,40,0" FontFamily="Arial" FontSize="15" Foreground="#FF474747" Grid.Column="1" Grid.Row="2" Height="63" VerticalAlignment="Top" Click="btn_runner_Click" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0,-2" StartPoint="1,1">
                    <GradientStop Color="#FF00FF9C"/>
                    <GradientStop Color="#FFAAABFF" Offset="0.767"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Button Name="btn_sponsor"  Content="Я хочу стать спонсором бегуна" Margin="40,2,40,0" FontFamily="Arial" FontSize="15" Foreground="#FF474747" Grid.Column="1" Grid.Row="3" Height="64" VerticalAlignment="Top" Click="btn_sponsor_Click" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0,-2" StartPoint="1,1">
                    <GradientStop Color="#FF00FF9C"/>
                    <GradientStop Color="#FFAAABFF" Offset="0.767"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name="btn_about" Content="Я хочу узнать больше о событии" Margin="40,0" FontFamily="Arial" FontSize="15" Foreground="#FF474747" Grid.Column="1" Grid.Row="4" Height="65" VerticalAlignment="Top" Click="btn_about_Click" FontWeight="Bold" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0,-2" StartPoint="1,1">
                    <GradientStop Color="#FF00FF9C"/>
                    <GradientStop Color="#FFAAABFF" Offset="0.767"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name="btn_Login" Content="Login" Margin="0,0,20,0" FontFamily="Open Sans Light" FontSize="14" Foreground="#FF474747" Grid.Column="2" Grid.Row="6" Click="btn_Login_Click" FontWeight="Bold" Height="36" HorizontalAlignment="Right" Width="117" VerticalAlignment="Bottom">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1.2,1.2">
                    <GradientStop Color="#FF00FF9C"/>
                    <GradientStop Color="#FFAAABFF" Offset="0.767"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Rectangle StrokeThickness="0" MinWidth="670" Grid.ColumnSpan="3" Grid.Row="7" Height="24" VerticalAlignment="Bottom" >
            <Rectangle.Fill>
                <ImageBrush ImageSource="/i.jpg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="tbTime" Margin="13,0,5,2" TextWrapping="Wrap" Text="" Foreground="White" FontSize="14" TextAlignment="Center" FontFamily="Open Sans Light" Height="19" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="7"/>

    </Grid>
</Page>
