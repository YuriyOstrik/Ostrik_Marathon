<Window x:Class="MarathonSkills.Runner.ContactCoordinator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills.Runner"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="ContactCoordinator" Height="450" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00FF9C"/>
                <GradientStop Color="#FFAAABFF" Offset="0.767"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="212.146"/>
            <ColumnDefinition Width="149.854"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="14,25,0,0" TextWrapping="Wrap" Text="Контакты" VerticalAlignment="Top" FontSize="24" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Для получения дополнительной информации пожалуйста свяжитесь с координаторами" VerticalAlignment="Top" Width="573" FontSize="24" FontWeight="Bold" Height="121" Grid.ColumnSpan="4"/>
        <TextBlock HorizontalAlignment="Left" Margin="31,137,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Телефон: " VerticalAlignment="Top" Width="145" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2" Height="38"/>
        <TextBlock HorizontalAlignment="Left" Margin="31,206,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="145" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2" Height="40"/>
        <TextBlock x:Name="txt_tel" Grid.Column="1" HorizontalAlignment="Left" Margin="59,137,0,0" Grid.Row="1" TextWrapping="Wrap" Text="+791199847796" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="431" FontSize="24" FontWeight="Bold" Height="38"/>
        <TextBlock Name="txt_email" Grid.Column="1" HorizontalAlignment="Left" Margin="43,206,0,0" Grid.Row="1" TextWrapping="Wrap" Text="coordinators@marathonskills2025.org" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="457" FontSize="24" FontWeight="Bold" Height="40"/>

    </Grid>
</Window>
