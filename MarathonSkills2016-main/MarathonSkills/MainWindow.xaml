<Window x:Class="MarathonSkills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Marathon Skills 2025" Height="187.5" Width="290" Background="#FFC2F1B8" MinWidth="800" MinHeight="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="135"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Rectangle StrokeThickness="0" Height="52" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8C89FD"/>
                    <GradientStop Color="#FFA75FA7" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button Name="btn_back" Content="Назад" Margin="0,0,10,8" Background="{x:Null}" FontFamily="Open Sans Light" FontSize="14" Foreground="#FF474747" HorizontalAlignment="Right" Width="116" Height="36" VerticalAlignment="Bottom" Click="btn_back_Click_1" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle StrokeThickness="0" MinWidth="670" Grid.ColumnSpan="3" Grid.Row="2" Height="24" VerticalAlignment="Bottom" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8C89FD"/>
                    <GradientStop Color="#FFA75FA7" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <TextBlock Margin="21,9,188.667,0" TextWrapping="Wrap" Text="MARATHON SKILLS 2025" Foreground="White" FontSize="26" HorizontalAlignment="Center" Width="324" Height="37" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Open Sans Semibold" Grid.Column="1" FontWeight="Bold"/>
        <Button x:Name="btnLogout" Content="Logout" Margin="0,0,10,8" FontFamily="Open Sans Light" FontSize="14" Foreground="#FF474747" HorizontalAlignment="Right" Width="116" Height="36" VerticalAlignment="Bottom" Click="btnLogout_Click" Grid.Column="2" Background="{x:Null}" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden" Content="" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        <Label Grid.Column="1" Content="Быстрее, Выше, Сильнее!" FontSize="22" Foreground="White"  Grid.Row="1" RenderTransformOrigin="0.506,0.237" Margin="124,379,124,0" Grid.RowSpan="2" FontFamily="Open Sans Semibold"/>

    </Grid>
</Window>
